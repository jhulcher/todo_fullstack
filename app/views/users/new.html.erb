<div class="outer">
  <div class="splash">
    <p class="title">
      Prioritizer
    </p>
    <p class="tagline">
      Rearrange your day!
    </p>
    <form action="<%= users_url %>" method="post">
      <%= auth_token_input %>
      <input type="text"
              name="user[username]"
              class="login-text"
              placeholder='Username'
              value="">
      <div class="bottom_pad"></div>
      <input type="password"
               name="user[password]"
               placeholder='Password'
               value=""
               class="login-text">
      <div class="bottom_pad"></div>
      <input type="submit"
             value="Sign Up"
             class="login" />
    </form>

    <p class="account-status">
      Already a Member?
    </p>

    <div class="sign-up">
      <%= link_to "Sign In!", new_session_url, method: :get %>
    </div>

    <div class="bottom-shadow-splash">
    </div>
    <div class="right-shadow-splash">
    </div>
    <div class="pagepeel-splash"/>
  </div>
</div>
